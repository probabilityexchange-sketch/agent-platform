generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  walletAddress  String   @unique
  username       String?  @unique
  creditBalance  Int      @default(0)
  nonce          String?
  nonceExpiresAt DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  sessions           Session[]
  containers         Container[]
  creditTransactions CreditTransaction[]
  purchaseIntents    PurchaseIntent[]
  creditLedger       CreditLedger[]
  chatSessions       ChatSession[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  jti       String   @unique
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([jti])
}

model Container {
  id          String   @id @default(cuid())
  userId      String
  dockerId    String?  @unique
  subdomain   String   @unique
  agentId     String
  status      String   @default("PROVISIONING")
  url         String?
  password    String?
  creditsUsed Int      @default(0)
  expiresAt   DateTime
  stoppedAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user  User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  agent AgentConfig @relation(fields: [agentId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([expiresAt])
}

model ChatSession {
  id          String   @id @default(cuid())
  userId      String
  agentId     String
  title       String   @default("New Chat")
  creditsUsed Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  agent    AgentConfig @relation(fields: [agentId], references: [id])
  messages ChatMessage[]

  @@index([userId])
}

model ChatMessage {
  id        String   @id @default(cuid())
  sessionId String
  role      String
  content   String
  toolCalls String?
  createdAt DateTime @default(now())

  session ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
}

model CreditTransaction {
  id          String   @id @default(cuid())
  userId      String
  type        String
  status      String   @default("PENDING")
  amount      Int
  txSignature String?  @unique
  tokenAmount BigInt?
  memo        String?
  containerId String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([txSignature])
  @@index([type, status])
}

model CreditPackage {
  id          String  @id @default(cuid())
  code        String  @unique
  credits     Int
  priceTokens BigInt
  mint        String
  enabled     Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  purchaseIntents PurchaseIntent[]
}

model PurchaseIntent {
  id             String               @id @default(uuid())
  userId         String
  packageId      String
  expectedAmount BigInt
  mint           String
  treasury       String
  status         PurchaseIntentStatus @default(PENDING)
  expiresAt      DateTime
  createdAt      DateTime             @default(now())
  confirmedAt    DateTime?
  txSig          String?              @unique

  user    User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  package CreditPackage @relation(fields: [packageId], references: [id])
  ledger  CreditLedger?

  @@index([userId, status])
  @@index([expiresAt])
}

model CreditLedger {
  id        String   @id @default(cuid())
  userId    String
  intentId  String   @unique
  delta     Int
  reason    String
  createdAt DateTime @default(now())

  user   User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  intent PurchaseIntent @relation(fields: [intentId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model AgentConfig {
  id             String   @id @default(cuid())
  slug           String   @unique
  name           String
  description    String
  image          String
  internalPort   Int
  creditsPerHour Int
  memoryLimit    BigInt
  cpuLimit       BigInt
  pidLimit       Int      @default(256)
  envVars        String   @default("{}")
  volumes        String   @default("[]")
  systemPrompt   String   @default("You are a helpful AI assistant.")
  tools          String   @default("[]")
  defaultModel   String   @default("meta-llama/llama-3.3-70b-instruct:free")
  active         Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  containers   Container[]
  chatSessions ChatSession[]
}

enum PurchaseIntentStatus {
  PENDING
  CONFIRMED
  EXPIRED
  FAILED
}
